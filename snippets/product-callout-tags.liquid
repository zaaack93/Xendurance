{%if product.metafields.custom.callout_badge.value != blank%}
    <div class="callout-container">
        <span class="callout-badge {% if product.metafields.custom.callout_badge.value.icon == blank %} padd-same {%endif%}" style="background-color:{{product.metafields.custom.callout_badge.value.background_color}};">
            {% if product.metafields.custom.callout_badge.value.icon != blank %}
                <span class="img-badge">
                    <img src="{{ product.metafields.custom.callout_badge.value.icon | img_url }}" class="badge-icon" />
                </span>
            {% endif %}
            <span class="text-badge">{{product.metafields.custom.callout_badge.value.text}}</span>
        </span>
    </div>
{%endif%}